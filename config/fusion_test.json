{
    "name": "FS_Head_Test",
    "phase": "test",
    "gpu_ids": [
        0
    ],

    "path": {
        "log": "logs",
        "tb_logger": "tb_logger",
        "results": "/content/DifFusion_out",
        "checkpoint": "checkpoint", 
        "resume_state": "/content/diffusion"
    },

    "path_df": {
        "log": "logs",
        "tb_logger": "tb_logger",
        "results": "/content/DifFusion_out",
        "checkpoint": "checkpoint", 
        "resume_state": "/content/fusion"
    },

    "datasets": {
        "train": {
            "name": "MSRS",
            "dataroot": "Path_DATASET",
            "resolution": 640,
            "batch_size": 1, 
            "num_workers": 1,
            "use_shuffle": true,
            "data_len": -1 
        },
        "val": {
            "name": "MSRS",
            "dataroot": "Path_DATASET",
            "resolution": 640,
            "image_size_w": 640,
            "image_size_h": 480,
            "batch_size": 1,
            "num_workers": 1,
            "use_shuffle": true,
            "data_len": -1    
        },
        "test": {
            "name": "FMB",
            "dataroot": "/content/FMB/test",
            "resolution": 640, 
            "image_size_w": 640,
            "image_size_h": 480,
            "batch_size": 1,
            "num_workers": 1,
            "use_shuffle": false,
            "data_len": -1
        }
    },

    "model_df": {
        "feat_scales": [2, 5, 8, 11, 14],
        "out_channels": 4,
        "loss_type": "ce",
        "output_cm_size": 640,
        "psp": true,
        "feat_type": "dec",
        "t": [5, 50, 100]
    },

    "model": {
        "which_model_G": "sr3",
        "finetune_norm": false,
        "unet": {
            "in_channel": 4,
            "out_channel": 4,
            "inner_channel": 128,
            "channel_multiplier": [
                1,
                2,
                4,
                8,
                8
            ],
            "attn_res": [
                16
            ],
            "res_blocks": 2,
            "dropout": 0.2
        },
        "beta_schedule": {
            "train": {
                "schedule": "linear",
                "n_timestep": 2000,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            },
            "val": {
                "schedule": "linear",
                "n_timestep": 2000,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            },
            "test": {
                "schedule": "linear",
                "n_timestep": 2000,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            }
        },
        "diffusion": {
            "image_size": 640,
            "image_size_w": 640,
            "image_size_h": 480,
            "channels": 4,
            "loss": "l2",
            "is_concat": false,
            "conditional": false
        }
    },
    
    "train": {
        "n_epoch": 300,
        "train_print_freq": 50,
        "val_freq": 1,
        "val_print_freq": 50,
        "optimizer": {
            "type": "adam",
            "lr": 1e-4
        },
        "sheduler": {
            "lr_policy": "linear",
            "n_steps": 3,
            "gamma": 0.1
        }
    }
}
